<div class="box-interaction">
    <form id="post-image" class="form-grid-postimage" method ="POST" enctype="multipart/form-data" action="/posts/createPost">
        <fieldset>
            <legend>Post Image</legend>
            <label> Title: </label>
            <input type="text" name="post_title" required />
            <br />
            <label> Description: </label>
            <textarea name="post_description" />Put text here...</textarea>
            <br />
            <label> Add file: </label>
            <input type="file" name="post_file" required />
            <br />
            <label> Accept Use Policy for uploading images: </label>
            <input type="checkbox" id="checkbox_policy" name="checkbox_policy" value="policy" required />
            <br />
            <button type="submit">Post Image</button>
        </fieldset>
    </form>
</div>
